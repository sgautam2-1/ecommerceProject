<!-- app/views/devise/registrations/new.html.erb -->
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <h3>Address</h3>
  <%= f.fields_for :address do |address_form| %>
    <div class="field">
      <%= address_form.label :street_address %><br />
      <%= address_form.text_field :street_address %>
    </div>

    <div class="field">
      <%= address_form.label :city %><br />
      <%= address_form.text_field :city %>
    </div>

    <div class="field">
      <%= address_form.label :postal_code %><br />
      <%= address_form.text_field :postal_code %>
    </div>

    <div class="field">
      <%= address_form.label :province_id %><br />
      <%= address_form.collection_select :province_id, Province.all, :id, :name %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
