<h1 class="text-2xl font-bold mb-4">Feedback Details</h1>

<p class="mb-4">
  <strong class="font-semibold">Message:</strong>
  <%= @feedback.message %>
</p>

<% if @feedback.image.attached? %>
  <p class="mb-4">
    <strong class="font-semibold">Image:</strong>
    <%= image_tag @feedback.image, class: "mt-2 border border-gray-300 rounded-lg shadow-sm" %>
  </p>
<% end %>

<%= link_to 'Edit this feedback', edit_feedback_path(@feedback), class: "bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600" %>
<%= link_to 'Back', feedbacks_path, class: "ml-4 bg-gray-300 text-gray-800 py-2 px-4 rounded-lg hover:bg-gray-400" %>
