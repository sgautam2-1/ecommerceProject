<table class="min-w-full bg-white">
  <thead>
    <tr>
      <th class="px-4 py-2">Order ID</th>
      <th class="px-4 py-2">Status</th>
      <th class="px-4 py-2">Invoice</th>
      <th class="px-4 py-2">Order Items</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td class="border px-4 py-2"><%= order.id %></td>
        <td class="border px-4 py-2"><%= order.status %></td>
        <td class="border px-4 py-2">
          <p>Subtotal: $<%= '%.2f' % order.subtotal %></p>
          <p>GST: $<%= '%.2f' % order.gst %></p>
          <p>PST: $<%= '%.2f' % order.pst %></p>
          <p>HST: $<%= '%.2f' % order.hst %></p>
          <p>QST: $<%= '%.2f' % order.qst %></p>
          <p>Total Taxes: $<%= '%.2f' % order.total_taxes %></p>
          <p>Total Amount: $<%= '%.2f' % order.total_amount %></p>
        </td>
        <td class="border px-4 py-2">
          <% if order.order_items.present? %>
            <% order.order_items.each do |item| %>
              <p><strong>Product:</strong> <%= item.product.name %> | <strong>Quantity:</strong> <%= item.quantity %></p>
            <% end %>
          <% else %>
            <p>No items found for this order.</p>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
